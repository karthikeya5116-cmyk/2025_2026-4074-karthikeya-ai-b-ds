        "# Data Manipulation\n",
        "import pandas as pd\n",
        "\n",
        "# Create DataFrame\n",
        "data = {\n",
        "    \"Name\": [\"A\", \"B\", \"C\"],\n",
        "    \"Age\": [20, 21, 22],\n",
        "    \"Marks\": [70, 80, 90]\n",
        "}\n",
        "df = pd.DataFrame(data)\n",
        "print(\"Original Data:\")\n",
        "print(df)\n",
        "# Add new column\n",
        "df[\"Bonus\"] = 5\n",
        "print(\"\\nAfter adding Bonus:\")\n",
        "print(df)\n",
        "# Increase marks\n",
        "df[\"Marks\"] = df[\"Marks\"] + 2\n",
        "print(\"\\nAfter increasing marks\")\n",
        "print(df)\n",
        "# Change value\n",
        "df.loc[0, \"Age\"] = 21\n",
        "print(\"\\nAfter changing age of first student:\")\n",
        "print(df)\n",
        "#rename column\n",
        "df.rename(columns={'marks':'final'},inplace=True)\n",
        "print('\\n after renaming marks to final:')\n",
        "print(df)\n",
        "#remove column\n",
        "df.drop('Bonus', axis=1, inplace = True)\n",
        "print('\\n after removing Bonus:')\n",
        "print(df)"
      ]
